{% extends 'base.html.twig' %}

{% block title %}Réinitialiser son mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser son mot de passe</h1>

    <div class="form request-password">
        
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
            </div>
    
            <button class="contact-btn">Envoyer la demande</button>
        {{ form_end(requestForm) }}

    </div>
{% endblock %}
