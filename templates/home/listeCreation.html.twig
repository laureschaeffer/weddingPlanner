{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}

<h1>Nos cr√©ations</h1>
{% for categorie in categories %}
    <h2>{{categorie}}</h2>

    {# chaque categorie contient une collection de creations #}
    {% for crea in categorie.creations %}
        <h3> <a href="{{path('show_creation', {'id': crea.id}) }}"> {{crea}} </a></h3>
        <p></p>
        {# {{ dump(crea.pictures) }} #}
        {# tableau de photos #}
        {# si pictures est un tableau de tableau associatif, il faut une boucle, sinon j'utilise l'index "alt" et "url" #}
        {% if crea.pictures is iterable %}
            {% for picture in crea.pictures %}
                {% for p in picture %}
                    <figure><img src="{{ asset(p.url) }}" alt="{{p.alt}}"></figure>
            
                {% endfor %}

            {% endfor %}

        {% endif %}

    {% endfor %}
    

{% endfor %}

{% endblock %}
