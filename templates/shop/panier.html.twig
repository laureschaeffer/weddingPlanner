{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}
{% block body %}
<h1>Votre panier</h1>


{% if panier %}
    {% set total = 0 %}
    
    {% for p in panier %}
        <p>{{p.produit}} </p>
        <p>Quantit√©: {{p.qtt}} </p>
        <p>Sous-total: {{p.sousTotal}}</p>

        {# calcule le total de la commande  #}
        {% set total = total + p.sousTotal %}

        <hr>
    {% endfor %}

    <p>Total {{total}} </p>
    <p><a href="{{path('remove_basket')}}">Supprimer tout le panier</a></p>

    {% else %}
    <p>Votre panier est vide</p>
{% endif %}

{% endblock %}
