{% extends 'adminBase.html.twig' %}

{% block title %}Pannel admin{% endblock %}

{% block body %}

<section id="accueil-admin">
    <h1>Bienvenue sur le pannel admin</h1>
    
    <div id="diag-container">
        <h2>Etats des projets</h2>
        <div>
          {# renvoie un tableau json avec data-attribute pour chartjs  #}
          <canvas id="diag-etat-projet" data-etat-projet="{{ etatProjets|json_encode|e('html_attr') }}"></canvas>
        </div>

        <h2>Projets par mois</h2>
        <div>
          <canvas id="diag-projet-mois" data-projet-mois="{{ projetMois|json_encode|e('html_attr') }}"></canvas>
        </div>
        
        <h2>Chiffre d'affaire mensuel</h2>
        <div>
          <canvas id="diag-chiffre-affaire" data-chiffre-affaire="{{ caMois|json_encode|e('html_attr') }}"></canvas>
        </div>
    </div>

    <p>Rechercher dans les projets ou les r√©servations</p>
    <form action="{{ path('app_search')}}" method="POST" id="search-bar">
      <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
          <g>
              <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
          </g>
      </svg>
      <input type="search" class="search" name="search" placeholder="Recherche">
      
      <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
      >
      {# honeypot #}
      <input name="firstname" type="text" id="firstname" class="hide-robot">

      <button type="submit" name="submit">Valider</button>
  </form>

</section>
  
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
{% endblock %}
