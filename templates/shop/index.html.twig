{% extends 'base.html.twig' %}

{% block title %}Commerce{% endblock %}

{% block body %}

<h1>Commerce</h1>

{% for collection in collections %}
   
<h2>{{collection}}</h2>

{# l'objet collection poss√®de un tableau d'objets Produit  #}
