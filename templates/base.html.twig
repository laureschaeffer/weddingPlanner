<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        <meta name="description" content="{% block meta %}description{% endblock %}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/jpg" href="{{ asset('img/logo/cc.png')}}" />
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div id="wrapper">
            <div id="page-container">

                <header>
                    <input type="checkbox" id="nav-icon">
                    <label for="nav-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"  id="burgerIcon"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"/></svg></label>
                    <nav id="nav">


                        {# <div id="nav-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"/></svg>
                            <a href="#">Menu</a>
                        </div> #}
                        <div id="first-nav">
                            <a href="{{ path('app_creation') }}">Portfolio</a>
                            <a href="{{ path('app_prestation') }}">Nos prestations</a>
                            <a href="{{ path('app_worker') }}">Equipe</a>
                            <a href="{{ path('app_shop') }}">Boutique</a>
                        </div>
                        <a href="{{ path('app_home') }}"><img src="{{ asset('img/logo/logo3.png') }}" alt="logo cérémonie couture" class="logo"></a>
                        
                        
                        <div id="second-nav">
                            <a href="{{ path('app_home') }}" class="accueil">Accueil</a>
                            <a href="{{ path('app_contact') }}" class="callToAction">
                                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.dev/svgjs" viewBox="0 0 2000 2000"><g><g fill="#000000" id="star" transform="matrix(1,0,0,1,25,0)"><path d="M 500 500 C 1000 1000 1000 1000 1500 500 C 1000 1000 1000 1000 1500 1500 C 1000 1000 1000 1000 500 1500 C 1000 1000 1000 1000 500 500" stroke-linecap="round" stroke-linejoin="round"></path></g></g></svg>
                                Projet
                                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.dev/svgjs" viewBox="0 0 2000 2000"><g><g fill="#000000" id="star" transform="matrix(1,0,0,1,25,0)"><path d="M 500 500 C 1000 1000 1000 1000 1500 500 C 1000 1000 1000 1000 1500 1500 C 1000 1000 1000 1000 500 1500 C 1000 1000 1000 1000 500 500" stroke-linecap="round" stroke-linejoin="round"></path></g></g></svg>
                            </a>
                            {% if app.user %}
                                <a href="{{path('app_profil')}}"><i class="fa-solid fa-user"></i>{{app.user}}</a>
                                <a href="{{path('app_logout')}}">Se déconnecter</a>
                            {% else %}
                                <a href="{{path('app_login')}}">Authentification</a>
                            {# <a href="{{path('app_register')}}">S'inscrire</a> #}
                            {% endif %}
                            
                        </div>
                    </nav>
    
                </header>
    
                {# message de success #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {# message d'erreur #}
                {% for msg in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ msg }}
                    </div>
                {% endfor %}
    
                {% block body %}{% endblock %}

            </div>
            <footer>
                <p>COPYRIGHT &#169; Cérémonie Couture</p>
                <div class="footer-align">
                    <ul>
                        <li>Contact</li>
                        <li>5 boulevard Laine</li>
                        <li>SchneiderBourg</li>
                        <li>01 97 59 96 00</li>
                        <li>diane@ceremonie-couture.fr</li>
                    </ul>
                    <ul>
                        <li>Légal</li>
                        <li>Mentions légales</li>
                        {# si la personne est connectée et admin, elle peut acceder au pannel admin  #}
                    {% if app.user %}
                        {% if ("ROLE_ADMIN" in app.user.roles) or ("ROLE_SUPERADMIN" in app.user.roles)  %}
                            <li><a href="{{path('app_admin')}}">Office</a></li>
                        {% endif %}
                    {% endif %}
                    </ul>
                    
                    <form action="{{ path('app_search')}}" method="GET" id="search-bar">
                        <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
                            <g>
                                <path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path>
                            </g>
                        </svg>
                        <input type="search" class="search" name="search" placeholder="Recherche">
                        {# honeypot #}
                        <input name="firstname" type="text" id="firstname" class="hide-robot">
                    </form>

                </div>
            </footer>
            <!--========== SCROLL UP ==========-->
            <a href="#" class="scrollup" id="scroll-up">
                &#8593;
            </a>
        </div>
    </body>
    <script src="{{ asset('js/main.js') }}"></script>
</html>
