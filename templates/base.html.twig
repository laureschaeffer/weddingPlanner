<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        <meta name="description" content="{% block meta %}description{% endblock %}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/jpg" href="{{ asset('img/logo/cc.png')}}" />
        {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div id="wrapper">
            <div id="page-container">

                <header>
                    <nav id="nav">
                        <div id="first-nav">
                            <a href="{{ path('app_creation') }}">Portfolio</a>
                            <a href="{{ path('app_prestation') }}">Nos prestations</a>
                            <a href="{{ path('app_worker') }}">Equipe</a>
                            <a href="{{ path('app_shop') }}">Commerce</a>
                        </div>
                        <a href="{{ path('app_home') }}"><img src="{{ asset('img/logo/logo3.png') }}" alt="logo cérémonie couture" class="logo"></a>
                        
                        
                        <div id="second-nav">
                            <a href="{{ path('app_contact') }}">Contact</a>
                            {% if app.user %}
                                <a href="{{path('app_profil')}}"><i class="fa-solid fa-user"></i>{{app.user}}</a>
                                <a href="{{path('app_logout')}}">Se déconnecter</a>
                            {% else %}
                                <a href="{{path('app_login')}}">Se connecter</a>
                            {# <a href="{{path('app_register')}}">S'inscrire</a> #}
                            {% endif %}
                            <form action="{{ path('app_search')}}" method="GET" id="search-bar">
                                <i class="fa-solid fa-magnifying-glass"></i> <input type="search" class="search" name="search" placeholder="Recherche">
                                {# honeypot #}
		                        <input name="firstname" type="text" id="firstname" class="hide-robot">
                            </form>
                        </div>
                    </nav>
    
                </header>
    
                {# message de success #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {# message d'erreur #}
                {% for msg in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ msg }}
                    </div>
                {% endfor %}
    
                {% block body %}{% endblock %}

            </div>
            <footer>
                <p>COPYRIGHT &#169; Cérémonie Couture</p>
                <div class="footer-align">
                    <p>Contact</p>
                    <p>Mentions légales</p>
                    {# si la personne est connectée et admin, elle peut acceder au pannel admin  #}
                    {% if app.user and ("ROLE_ADMIN" or "ROLE_SUPERADMIN" in app.user.roles) %}
                        
                        <p><a href="{{path('app_admin')}}">Office</a></p>
                    {% endif %}

                </div>
            </footer>
        </div>
    </body>
</html>
