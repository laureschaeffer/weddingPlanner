                    <nav id="nav">
                        <div id="first-nav">
                            <a href="{{ path('app_creation') }}">Portfolio</a>
                            <a href="{{ path('app_prestation') }}">Nos prestations</a>
                            <a href="{{ path('app_worker') }}">Equipe</a>
                            <a href="{{ path('app_shop') }}">Boutique</a>
                        </div>
                        <a href="{{ path('app_home') }}"><img src="{{ asset('img/logo/logo-cropped.png') }}" alt="logo cérémonie couture" class="logo"></a>
                        
                        
                        <div id="second-nav">
                            <a href="{{ path('app_home') }}" class="accueil">Accueil</a>
                            <a href="{{ path('app_contact') }}" class="callToAction">
