                                <a href="{{path('app_logout')}}">Se déconnecter</a>
                            {% else %}
                                <a href="{{path('app_login')}}">Authentification</a>
                            {# <a href="{{path('app_register')}}">S'inscrire</a> #}
                            {% endif %}
                            
                        </div>
                    </nav>
    
                </header>
    
                {# message de success #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {# message d'erreur #}
                {% for msg in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ msg }}
                    </div>
                {% endfor %}
    
                {% block body %}{% endblock %}

            </div>
            <footer>
                <p>COPYRIGHT &#169; Cérémonie Couture</p>
                <div class="footer-align">
                    <ul>
                        <li>Contact</li>
                        <li>5 boulevard Laine</li>
                        <li>SchneiderBourg</li>
                        <li>01 97 59 96 00</li>
                        <li>diane@ceremonie-couture.fr</li>
                    </ul>
                    <ul>
                        <li>Légal</li>
                        <li><a href="{{path('mentions_legales')}}" target="_blank">Mentions légales</a></li>
                        <li><a href="{{path('politique_confidentialite')}}" target="_blank">Politique de confidentialité</a></li>
                        <li><a href="{{path('cgv')}}" target="_blank">CGV</a></li>
                        {# si la personne est connectée et admin, elle peut acceder au pannel admin  #}
                    {% if app.user %}
                        {% if ("ROLE_ADMIN" in app.user.roles) or ("ROLE_SUPERADMIN" in app.user.roles)  %}
                            <li><a href="{{path('app_admin')}}">Office</a></li>
                        {% endif %}
                    {% endif %}
                    </ul>

                </div>
            </footer>
            <!--========== SCROLL UP ==========-->
            <a href="#" class="scrollup" id="scroll-up">
                &#8593;
            </a>
        </div>
    </body>
    <script src="{{ asset('js/scrollreveal.min.js')}}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
</html>
